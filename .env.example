# ScholarlySearch Environment Variables
# Copy this file to .env and update with your actual values
# Note: .env is in .gitignore and should never be committed

# Semantic Scholar API Configuration
# Set to "true" to use real API instead of mock data
USE_REAL_API=false

# Semantic Scholar API Key (optional)
# Free tier available without key, but key increases rate limits
# Get your key at: https://www.semanticscholar.org/product/api
SEMANTIC_SCHOLAR_API_KEY=

# Development Settings
PHX_HOST=localhost
PORT=4000
